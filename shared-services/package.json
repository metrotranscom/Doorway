{
    "name": "@bloom-housing/shared-services",
    "version": "1.0.0",
    "description": "Shared services for Bloom affordable housing system",
    "homepage": "https://github.com/bloom-housing/bloom/tree/master/shared-services",
    "main": "index.js",
    "license": "Apache-2.0",
    "private": true,
    "publishConfig": {
      "access": "public",
      "registry": "https://registry.npmjs.org"
    },
    "scripts": {
      "test": "jest -w 1",
      "test:coverage": "jest -w 1 --coverage --watchAll=false",
      "prettier": "prettier --write \"**/*.ts\""
    },
    "dependencies": {
      "@bloom-housing/shared-helpers": "^7.5.0"
    },
    "devDependencies": {
      "@nestjs/testing": "^8.3.1",
      "@testing-library/jest-dom": "5.11.9",
      "@testing-library/react": "12.1.3",
      "@types/jest": "^26.0.14",
      "@types/node-polyglot": "^2.4.1",
      "@types/react-dom": "^16.9.5",
      "@types/react-tabs": "^2.3.2",
      "@types/react-test-renderer": "^16.9.3",
      "@types/react-transition-group": "^4.4.0",
      "identity-obj-proxy": "^3.0.0",
      "jest": "^26.5.3",
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "react-test-renderer": "^17.0.2",
      "ts-jest": "^26.4.1",
      "ts-loader": "^8.0.4",
      "typescript": "^4.5.5"
    },
    "jest": {
      "moduleFileExtensions": [
        "js",
        "json",
        "ts",
        "tsx"
      ],
      "rootDir": "src",
      "testRegex": ".spec.ts$",
      "transform": {
        "^.+\\.[t|j]sx?$": "ts-jest"
      },
      "transformIgnorePatterns": ["node_modules/?!(@bloom-housing/ui-components/*)"],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
    }
  }
