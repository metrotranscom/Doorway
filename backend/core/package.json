{
  "name": "@bloom-housing/backend-core",
  "version": "7.13.0",
  "description": "Listings service reference implementation for the Bloom affordable housing system",
  "author": "Sean Albert <sean.albert@exygy.com>",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "license": "Apache-2.0",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && nest build",
    "start": "node dist/src/main",
    "dev": "NODE_ENV=development nest start --watch --preserveWatchOutput",
    "debug": "nest start --debug --watch",
    "db:drop": "psql -c 'DROP DATABASE IF EXISTS bloom;'",
    "db:create": "psql -c 'CREATE DATABASE bloom;'",
    "db:add-uuid-extension": "psql -d bloom -c 'CREATE EXTENSION IF NOT EXISTS \"uuid-ossp\";'",
    "db:seed": "ts-node src/seeder/seed.ts",
    "db:migration:run": "yarn typeorm migration:run",
    "db:migration:generate": "yarn typeorm migration:generate",
    "db:migration:revert": "yarn typeorm migration:revert",
    "db:reset": "yarn db:drop && yarn db:create && yarn db:add-uuid-extension",
    "db:reseed:print-notice": "if [ \"${SUPPRESS_NOTICE}\" != \"true\" ]; then echo -e \"\\033[0;33mNOTICE: This command will not include listings from an external endpoint. Use \\033[1;32m'yarn db:reseed:with-external:prod'\\033[0;33m or \\033[1;32m'yarn db:reseed:with-external:dev'\\033[0;33m instead if you need these\\033[0m\"; fi",
    "db:reseed": "yarn db:reseed:print-notice && yarn db:reset && yarn db:migration:run && yarn db:seed",
    "db:import-listings": "cd ../../tasks/import-listings && yarn install && yarn build && yarn \"import:run:local:${IMPORT_ENV}\" && cd ../../backend/core",
    "db:reseed:with-external:prod": "SUPPRESS_NOTICE=true yarn db:reseed && IMPORT_ENV=prod yarn db:import-listings",
    "db:reseed:with-external:dev": "SUPPRESS_NOTICE=true yarn db:reseed && IMPORT_ENV=dev yarn db:import-listings",
    "db:reseed:ci": "SUPPRESS_NOTICE=true PGDATABASE=template1 yarn db:reseed",
    "test": "jest --config ./jest.json --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json --runInBand --forceExit",
    "test:e2e:local": "psql -c 'DROP DATABASE IF EXISTS bloom_test' && psql -c 'CREATE DATABASE bloom_test' && psql -d bloom_test -c 'CREATE EXTENSION IF NOT EXISTS \"uuid-ossp\";' && yarn typeorm:test migration:run && ts-node src/seeder/seed.ts --test && yarn run test:e2e",
    "typeorm": "ts-node -P ./tsconfig.json $(yarn bin typeorm) -d ./ormDataSource.ts",
    "typeorm:test": "ts-node -P ./tsconfig.json $(yarn bin typeorm) -d ./ormTestDataSource.ts",
    "herokusetup": "node heroku.setup.js",
    "heroku-postbuild": "rimraf dist && nest build && yarn run db:migration:run",
    "generate:client": "ts-node scripts/generate-axios-client.ts && prettier -w types/src/backend-swagger.ts",
    "migrator": "ts-node migrator.ts"
  },
  "dependencies": {
    "@anchan828/nest-sendgrid": "^0.3.25",
    "@aws-sdk/client-s3": "^3.326.0",
    "@aws-sdk/s3-request-presigner": "^3.327.0",
    "@google-cloud/translate": "^6.2.6",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/cli": "^9.5.0",
    "@nestjs/common": "^9.4.2",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.4.2",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.2",
    "@nestjs/schedule": "^2.2.2",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/throttler": "^4.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "@types/cache-manager": "^3.4.0",
    "async-retry": "^1.3.1",
    "axios": "0.21.2",
    "cache-manager": "^3.4.0",
    "casbin": "5.13.0",
    "class-transformer": "0.3.1",
    "class-validator": "^0.14.0",
    "cloudinary": "^1.25.2",
    "cookie-parser": "1.4.6",
    "dayjs": "^1.10.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "@types/express": "^4.17.17",
    "handlebars": "^4.7.6",
    "joi": "^17.3.0",
    "jwt-simple": "^0.5.6",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.12",
    "nestjs-twilio": "^4.1.1",
    "nestjs-typeorm-paginate": "^4.0.3",
    "newrelic": "7.5.1",
    "node-polyglot": "^2.4.0",
    "passport": "^0.6.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.4.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "10.8.0",
    "twilio": "^3.71.3",
    "typeorm": "0.3.12",
    "typeorm-naming-strategies": "4.1.0",
    "typescript": "4.6.4",
    "uuid": "9.0.0",
    "@types/multer": "^1.4.7",
    "@types/passport-jwt": "^3.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.2",
    "@types/axios": "^0.14.0",
    "@types/cookie-parser": "1.4.3",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.0.0",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.12",
    "aws-sdk-client-mock": "^2.1.1",
    "aws-sdk-client-mock-jest": "^2.1.1",
    "dotenv": "^8.2.0",
    "fishery": "^0.3.0",
    "jest": "^29.5.0",
    "supertest": "6.2.4",
    "swagger-axios-codegen": "0.11.16",
    "ts-jest": "^29.1.0",
    "ts-loader": "^8.0.4",
    "tsconfig-paths": "^3.9.0",
    "yargs": "^17.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "18",
    "yarn": "^1.22"
  },
  "gitHead": "02379da7dc3cf07b4476a19d5406abddefb47164"
}
