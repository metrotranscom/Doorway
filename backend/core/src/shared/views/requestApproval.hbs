{{#> layout_default }}
    <h1>
        {{ t "requestApprovalSubject"}}
    </h1>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0">
        <tbody>
        <tr>
            <td align="left">
            <p>
                {{t "t.hello"}},
                <br/><br/>
                {{t "partnerRequest" appOptions}}
                <br/><br/>
                {{t "loginToReview"}}
                <br/><br/>
                <strong>{{t "accessListing"}}</strong>
                <br/><br/>
            </p>
            </td>
        </tr>
        </tbody>
    </table>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0">
        <tbody>
        <tr>
            <td align="center">
            <a
                class="btn btn-primary"
                href="{{confirmationUrl}}"
                target="_blank"
                style="color:white"
                >
                  {{t "requestApproval.reviewListing"}}
                </a
            >
            </td>
        </tr>
        </tbody>
    </table>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0">
        <tbody>
        <tr>
            <td align="left">
            <p>
                {{t "footer.thankYou"}},
                <br/><br/>
                {{t "t.doorwayName"}}
            </p>
            </td>
        </tr>
        </tbody>
    </table>


{{/layout_default }}
